<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFrag">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/rol"
        app:layout_constraintEnd_toEndOf="@+id/rol"
        app:layout_constraintStart_toStartOf="@+id/rol"
        app:layout_constraintTop_toTopOf="@+id/rol"
        app:srcCompat="@drawable/boton_redondo" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/puesto"
        app:layout_constraintEnd_toEndOf="@+id/puesto"
        app:layout_constraintStart_toStartOf="@+id/puesto"
        app:layout_constraintTop_toTopOf="@+id/puesto"
        app:srcCompat="@drawable/boton_redondo" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="213dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/boton_redondo"
        android:ems="10"
        android:hint="Nombre Completo"
        android:inputType="textPersonName"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="213dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/boton_redondo"
        android:ems="10"
        android:hint="@string/contrasenya"
        android:inputType="textPersonName"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="@+id/editText3"
        app:layout_constraintStart_toStartOf="@+id/editText3"
        app:layout_constraintTop_toBottomOf="@+id/editText4" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="213dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:autoLink="email"
        android:autoText="false"
        android:background="@drawable/boton_redondo"
        android:ems="10"
        android:hint="@string/correo_electronico"
        android:inputType="textPersonName"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="@+id/editText3"
        app:layout_constraintStart_toStartOf="@+id/editText3"
        app:layout_constraintTop_toBottomOf="@+id/editText3" />

    <Spinner
        android:id="@+id/rol"
        android:layout_width="213dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:entries="@array/rol"
        android:popupBackground="@color/colorFrag"
        app:layout_constraintEnd_toEndOf="@+id/editText5"
        app:layout_constraintStart_toStartOf="@+id/editText5"
        app:layout_constraintTop_toBottomOf="@+id/editText5" />

    <Spinner
        android:id="@+id/puesto"
        android:layout_width="213dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:entries="@array/puesto"
        android:popupBackground="@color/colorFrag"
        app:layout_constraintEnd_toEndOf="@+id/rol"
        app:layout_constraintStart_toStartOf="@+id/rol"
        app:layout_constraintTop_toBottomOf="@+id/rol" />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/boton_redondo"
        android:onClick="crearUser"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="AÃ‘ADIR USUARIO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/puesto" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="374dp" />

</android.support.constraint.ConstraintLayout>