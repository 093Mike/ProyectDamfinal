<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/deg_color"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorSpinner"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="53dp"
                android:layout_height="59dp"
                app:srcCompat="@drawable/logosintexto" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="MENU PRINCIPAL"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/b_poweroff"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:onClick="powerOff"
                app:srcCompat="@drawable/poweroff" />

            <Space
                android:layout_width="15dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:fadeScrollbars="false"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/boton_menu_principal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo_menu"

                    android:drawableLeft="@drawable/logoalmacen"
                    android:onClick="menuAlmacen"
                    android:paddingRight="5dp"
                    android:text="Button"
                    android:textSize="12sp" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/boton_menu_principal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo_menu"
                    android:drawableLeft="@drawable/logopedidos"
                    android:drawablePadding="5dp"
                    android:onClick="gestioMenu"
                    android:paddingRight="5dp"
                    android:text="Button" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/boton_menu_principal3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo_menu"
                    android:drawableLeft="@drawable/logocliente"
                    android:onClick="gestioMenu"
                    android:paddingRight="5dp"
                    android:text="Button" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/boton_menu_principal4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo_menu"
                    android:drawableLeft="@drawable/logoproveedor"
                    android:drawablePadding="5dp"
                    android:onClick="gestioMenu"
                    android:paddingRight="5dp"
                    android:text="Button" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/boton_menu_principal5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton_redondo_menu"
                    android:drawableLeft="@drawable/logocliente"
                    android:onClick="gestioMenu"
                    android:paddingRight="5dp"
                    android:text="Button" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/boton_menu_principal6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo_menu"
                    android:onClick="gestioMenu"
                    android:text="Button" />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</FrameLayout>