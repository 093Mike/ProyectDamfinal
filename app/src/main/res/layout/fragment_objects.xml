<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="MENU PRINCIPAL"
                android:textColor="@color/cardview_light_background"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/b_poweroff"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:onClick="powerOff"
                app:srcCompat="@drawable/poweroff" />

            <Space
                android:layout_width="15dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/boton_menu_principal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="menuAlmacen"
                    android:text="Button" />

                <Button
                    android:id="@+id/boton_menu_principal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="gestioMenu"
                    android:text="Button" />

                <Button
                    android:id="@+id/boton_menu_principal3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="gestioMenu"
                    android:text="Button" />

                <Button
                    android:id="@+id/boton_menu_principal4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="gestioMenu"
                    android:text="Button" />

                <Button
                    android:id="@+id/boton_menu_principal5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="gestioMenu"
                    android:text="Button" />

                <Button
                    android:id="@+id/boton_menu_principal6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="gestioMenu"
                    android:text="Button" />

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</FrameLayout>